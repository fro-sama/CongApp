@page
@model CongApp.Pages.Admin.Task.TaskModel
@{
}

<div class="container">
    <form method="post">
        <h1>Tasks</h1>
        <!-- ASSIGNMENT -->
        <div class="row">
            <div class="input-group mb-3">
                <span class="input-group-text">Assignment</span>
                <select class="form-select" asp-for="AddTaskRequest.Assignment">
                    <option>Microphone Servant</option>
                    <option>Paragraph Reader</option>
                </select>
            </div>
        </div>
        <!-- ASSIGNEE -->
        <div class="row">
            <div class="input-group mb-3">
                <span class="input-group-text">Assignee</span>
                <select class="form-select" asp-for="AddTaskRequest.Assignee">
                    <option>Trae Young</option>
                    <option>Randy Sagum</option>
                    <option>Ronald Sagum</option>
                </select>
            </div>
        </div>
        <!-- PARTNER -->
        <div class="row">
            <div class="input-group mb-3">
                <span class="input-group-text">Partner</span>
                <select class="form-select" asp-for="AddTaskRequest.Partner">
                    <option>Trae Young</option>
                    <option>Randy Sagum</option>
                    <option>Ronald Sagum</option>
                </select>
            </div>
        </div>

        <!-- SAVE/CANCEL -->
        <div class="row">
            <div class="btn-group">
                <button type="submit" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-primary">Cancel</button>
            </div>
        </div>
    </form>
</div>