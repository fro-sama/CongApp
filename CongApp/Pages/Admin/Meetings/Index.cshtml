@page
@model CongApp.Pages.Meetings.IndexModel

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Meetings";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-hearts" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M11.5 1.246c.832-.855 2.913.642 0 2.566-2.913-1.924-.832-3.421 0-2.566ZM9 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm-9 8c0 1 1 1 1 1h10s1 0 1-1-1-4-6-4-6 3-6 4Zm13.5-8.09c1.387-1.425 4.855 1.07 0 4.277-4.854-3.207-1.387-5.702 0-4.276ZM15 2.165c.555-.57 1.942.428 0 1.711-1.942-1.283-.555-2.281 0-1.71Z" />
        </svg> Meetings
       
    </div>
    <div class="card-body">
        <p>
            <a asp-page="/admin/meetings/Create" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg> Create
               
            </a>
           
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <span class="icon">
                            <i class="fas fa-trash"></i>
                        </span> @Html.DisplayNameFor(model => model.MeetingModel[0].Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MeetingModel[0].Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MeetingModel[0].Week)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.MeetingModel) {
                <tr>
                    <td>
                        <input type="checkbox" >
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Week)
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group" aria-label="Basic mixed styles example">
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-icon-split">
                                    <span class="icon">
                                        <i class="fas fa-file"></i>
                                    </span>
                                    <span class="text">Details</span>
                                </a>
                                <a asp-page="./EditAssignments" asp-route-id="@item.Id" class="btn btn-outline-primary btn-icon-split">
                                <span class="icon">
                                    <i class="fas fa-edit"></i>
                                </span>
                                <span class="text">Edit</span>
                            </a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>