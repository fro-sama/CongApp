@page
@model CongApp.Pages.Admin.Meetings.EditAssignmentsModel

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Edit";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        Meeting Assignments <b>@Html.DisplayFor(model => model.Meeting.Week)</b>
    </div>
    <div class="card-body">
        <div>
            <a asp-page="/admin/Assignments/Create" asp-route-id="@Model.Meeting.Id" class="btn btn-md btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg> Add New
            </a>
        </div>
       
        <br />
        <table class="table table-bordered">
            <tr>
                <th>Assignment</th>
                <th>Assignee</th>
                <th>Partner</th>
                <th><a>Edit</a></th>
            </tr>
            @foreach (var assignment in Model.Meeting.Assignments)
            {
                <tr>
                    <td>
                        <span class="icon">
                            <i class="fas fa-tasks"></i>
                        </span>@assignment.Task
                    </td>
                    <td>
                        <span class="icon">
                            <i class="fas fa-user"></i>
                        </span>@assignment.Assignee
                    </td>
                    <td>
                        <span class="icon">
                            <i class="fas fa-user"></i>
                        </span>@assignment.Partner
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@assignment.Id">
                            <span class="icon">
                                <i class="fas fa-edit"></i>
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </table>
        <a asp-page="./Index">Back to List</a>
    </div>
    </div>


